<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CappuccinoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Mark: Main window -->
        <item name="android:windowBackground">@drawable/dr_splashscreen</item>
        <item name="android:statusBarColor">@color/colorForeground_light</item>
        <item name="android:navigationBarColor">@color/colorForeground_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Mark: Attribute colors -->
        <item name="ForegroundColor">@color/colorForeground_light</item>
        <item name="BackgroundColor">@color/colorBackground_light</item>
        <item name="DividerColor">@color/colorDivider_light</item>

        <item name="MessageBoxInColor">@color/colorMessageBoxIn_light</item>
        <item name="MessageBoxOutColor">@color/colorMessageBoxOut_light</item>

        <item name="AccentColor">@color/colorAccent_light</item>
        <item name="AccentColor2">@color/colorAccent2_light</item>
        <item name="AccentColor3">@color/colorAccent3_light</item>
        <item name="AccentColor4">@color/colorAccent4_light</item>
        <item name="AccentColor5">@color/colorAccent5_light</item>
        <item name="AccentColor6">@color/colorAccent6_light</item>

        <item name="TextDefaultColor">@color/colorTextDefault_light</item>
        <item name="TextGrayLightColor">@color/colorTextGrayLight_light</item>
        <item name="TextGrayColor">@color/colorTextGray_light</item>

        <!-- Mark: UI Elements -->
        <!--<item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
        <item name="badgeStyle">@style/BottomNavigationBadge</item>
    </style>
</resources>
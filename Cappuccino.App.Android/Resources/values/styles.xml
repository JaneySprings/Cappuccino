<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Mark: Text appearance -->
    <style name="Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/TextDefaultColor</item>
        <item name="android:textSize">@dimen/font_text</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/sans_display_demibold</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/sans_display_semibold</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">?attr/TextGrayColor</item>
    </style>

    <style name="Text.Gray.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Light">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">?attr/TextGrayLightColor</item>
    </style>

    <!-- Mark: Editors style -->
    <style name="ContentPage"/>
    <style name="ContentPage.Padding">
        <item name="android:padding">16dp</item>
    </style>

    <style name="ContentPage.RecycleItem">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">@dimen/content_margin</item>
        <item name="android:paddingEnd">@dimen/content_margin</item>
    </style>

    <style name="ContentPage.AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/ForegroundColor</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ImageViewContentDescription">
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Button.Accent" parent="Text.Bold">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextDefault_dark</item>
        <item name="android:background">@drawable/dr_button_layout_accent</item>

        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Button.Companion" parent="Text.Bold">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/TextGrayColor</item>
        <item name="android:background">@drawable/dr_button_layout_companion</item>

        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Button.Action" parent="ImageViewContentDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/content_margin</item>
        <item name="android:layout_marginEnd">@dimen/content_margin</item>
        <item name="android:background">?attr/DividerColor</item>
    </style>

    <style name="DefaultRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="Search" parent="Text">
        <item name="android:layout_marginStart">@dimen/content_margin</item>
        <item name="android:layout_marginEnd">@dimen/content_margin</item>
        <item name="android:background">@drawable/dr_button_layout_companion</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">@dimen/content_margin</item>
        <item name="android:paddingEnd">@dimen/content_margin</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">?attr/TextGrayLightColor</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:drawablePadding">@dimen/content_margin</item>
        <item name="drawableEndCompat">@drawable/ic_search_24dp</item>
    </style>

    <style name="CircleImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationBadge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">?attr/AccentColor</item>
    </style>

    <style name="Badge" parent="Text.Bold">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">@dimen/font_light</item>
        <item name="android:textColor">@color/colorTextDefault_dark</item>
    </style>

    <style name="Badge.Accent">
        <item name="android:background">@drawable/dr_button_layout_accent</item>
    </style>

    <style name="Badge.Dot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/dr_button_layout_badge</item>
    </style>

</resources>
